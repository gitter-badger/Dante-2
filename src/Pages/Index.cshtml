</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Story[0].AuthID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Story[0].AuthName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Story[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Story[0].Body)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Story[0].PostedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Story[0].LastEditedOn)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Story) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AuthID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuthName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Body)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastEditedOn)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
